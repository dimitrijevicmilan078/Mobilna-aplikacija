<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PL"
    android:background="@drawable/bg_lgreen">


    <View
        android:id="@+id/view_a"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_view"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premier League 2023/2024"
        android:padding="8dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="8dp"/>

        <RelativeLayout
            android:id="@+id/addScores"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/view_a"
            android:background="@drawable/bg_p">

            <EditText
                android:id="@+id/inputP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ems="12" />

            <ImageView
                android:id="@+id/addP"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/inputP"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_add_24"/>
            
        </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addScores"
        app:queryHint="Search"
        app:iconifiedByDefault="false"
        android:padding="2dp"/>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listviewp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search" />


</RelativeLayout>