<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Euro"
    android:background="@drawable/bg_hd">

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_view"
        android:id="@+id/view_a"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Euro 2024"
        android:padding="8dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="8dp"/>


    <RelativeLayout
        android:id="@+id/addScores"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/view_a"
        android:background="@drawable/e_view">

        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:layout_centerInParent="true"/>
        
        <ImageView
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/input"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_add_24"/>


    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addScores"
        app:queryHint="Search"
        app:iconifiedByDefault="false"
        android:padding="2dp"/>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchE" />



</RelativeLayout>